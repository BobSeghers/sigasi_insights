// Place your settings in this file to overwrite default and user settings.
{
    // markdownlint config object
    "markdownlint.config": {
        "MD013": false,
        "MD029": {
            "style": "ordered"
        },
        "MD041": false,
        "MD009" : {
            "br_spaces": 2
        },
        "MD007": {
            "indent": 4
        },
        "MD026": {
            "punctuation": ".,;:!"
        }
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "spellchecker.language": "en_US",
    "spellchecker.ignoreWordsList": [
        "Sigasi",
        "SHA1",
        "sha1sum",
        "plugins",
        "VHDL",
        "FlexNet",
        "FlexLM",
        "Quartus",
        "linting",
        "Verilog",
        "Altera",
        "Xilinx",
        "Graphics'",
        "ModelSim",
        "QuestaSim",
        "Vivado",
        "plugin",
        "Talkback",
        "metadata",
        "JSON",
        "UUID",
        "checkbox",
        "FPGA",
        "ASIC",
        "SystemVerilog",
        "Lieven",
        "Lemiengre"
    ],
    "spellchecker.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "spellchecker.ignoreRegExp": [],
    "spellchecker.ignoreFileExtensions": [],
    "spellchecker.checkInterval": 5000
}